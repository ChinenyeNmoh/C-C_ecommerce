<%- include('index') %>
<div class="products h-full">
    <div class="text-right mt-6">
        <a href="#" class="px-4 py-2 rounded text-white bg-blue-600">+ Create new</a>
    </div>
    <div class="bg-white rounded-lg mt-4 flex flex-col">
        <div class="p-4 border-b flex justify-between items-center">
            <input type="text" class="border rounded border-gray-300 focus:outline-none focus:border-blue-600 px-1" placeholder="search">
            <div class="flex items-center space-x-2">
                <select class="bg-transparent border border-gray-300 focus:outline-none rounded px-1 h-7 text-gray-600">
                    <option disabled selected>Category</option>
                    <option>All</option>
                    <option>Men</option>
                    <option>Women</option>
                </select>
                <div class="inline-flex items-center border border-gray-300 h-7 p-1 px-2 space-x-2 rounded">
                    <button class="btn">Last added</button>
                    <i class="fa-solid fa-sort"></i>
                </div>
            </div>
        </div>
        <div class="grid grid-cols-5 grid-rows-2 gap-4 p-4 ">
            <div class="border border-gray-300 rounded h-64">
                <div class="h-4/6 flex justify-center items-center">
                    <img class="h-full w-full" src="/images/demo.jpg" alt="Image-demo">
                </div>
                <div class="h-1/6 flex flex-col justify-center px-2">
                    <h3 class="text-md">Description</h3>
                    <p class="text-sm">$Price</p>
                </div>
                <div class="h-1/6 flex justify-between items-center px-2">
                    <button class="text-gray-500 text-sm border border-gray-300 rounded px-2">
                        <i class="fa-solid fa-pencil"></i>
                        Edit
                    </button>
                    <button id="" class="text-red-500 text-sm border border-gray-300 rounded px-2">
                        <i class="fa-solid fa-trash"></i>
                        Delete
                    </button>
                </div>
            </div>
            <div class="bg-gray-300">2</div>
            <div class="bg-gray-400">3</div>
            <div class="bg-gray-500">4</div>
            <div class="bg-gray-600">5</div>
            <div class="bg-gray-700">6</div>
            <div class="bg-gray-800">7</div>
            <div class="bg-gray-900">8</div>
            <div class="bg-gray-200">9</div>
            <div class="bg-gray-300">10</div>
        </div>
    </div>
    <div class="text-sm mt-4 text-right">
        <button id="prevBtn" class="bg-white text-gray-700 font-bold py-1 px-2 rounded-l">
            Previous
        </button>
        <button id="" class="btn bg-white text-gray-700 font-bold py-1 px-2">1</button>
        <button id="" class="btn bg-white text-gray-700 font-bold py-1 px-2">2</button>
        <button id="" class="btn bg-white text-gray-700 font-bold py-1 px-2">3</button>
        <button id="" class="btn bg-white text-gray-700 font-bold py-1 px-2 rounded-r">
            Next
        </button>
    </div>
</div>
