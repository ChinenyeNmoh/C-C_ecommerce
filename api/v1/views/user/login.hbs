<div class="container-fluid mb-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center fw-bold">Log In</h5>
                    <form action="/api/user/login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label fw-bold">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Log In</button>
                        <div class="mt-3 d-flex justify-content-between">
                        <a href="/api/user/googlelogin" class="btn btn-danger">
                            <i class="fab fa-google"></i> Log In With Google
                        </a>
                    </div>
                    </form>
                    <div class="mt-3">
                        <a href="/api/user/forgotpassword" class="text-muted">Forgot Password?</a>
                    </div>
                    <div class="mt-2">
                        <p>Don't have an account? <a href="/api/user/"><strong>Sign Up</strong></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
